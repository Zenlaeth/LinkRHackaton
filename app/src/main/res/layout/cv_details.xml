<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/cv_image_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trending1"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cv_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/cv_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cv_name_item"
                    style="@style/TitleTextStyle"
                    android:layout_marginTop="@dimen/default_margin"/>

                <TextView
                    android:id="@+id/cv_detail_description_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cv_description_label_item"
                    android:layout_marginTop="@dimen/default_margin"
                    style="@style/TitleTextStyle"
                    />

                <TextView
                    android:id="@+id/cv_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cv_description_subtitle_item"
                    style="@style/DefaultTextStyle"
                    />

                <TextView
                    android:id="@+id/cv_detail_experience_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:layout_marginTop="@dimen/default_margin"
                    style="@style/TitleTextStyle"
                    />

                <TextView
                    android:id="@+id/cv_detail_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    style="@style/DefaultTextStyle"
                    />

                <TextView
                    android:id="@+id/cv_detail_level_studies_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level of studies"
                    android:layout_marginTop="@dimen/default_margin"
                    style="@style/TitleTextStyle"
                    />

                <TextView
                    android:id="@+id/cv_detail_level_studies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level of studies"
                    style="@style/DefaultTextStyle"
                    />

                <Button
                    android:id="@+id/addBCart"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_below="@+id/passwordTilSignIn"
                    android:layout_marginTop="20dp"
                    android:text="I'm interested" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
